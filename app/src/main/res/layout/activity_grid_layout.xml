<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:rowCount="4">

    <TextView
        android:id="@+id/id1"
        android:layout_column="0"
        android:layout_row="0"
        android:text="Este es Leo Messi en un \n LayoutGrid" />


    <ToggleButton
        android:id="@+id/tgl_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="400dp"
        android:text="@string/toggle_btn2"
        android:textOff="@string/tgl_btn2"
        android:textOn="@string/tgl_btn"
        android:backgroundTintMode="@color/black"/>

    <ImageButton
        android:id="@+id/messi"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="30dp"
        android:backgroundTint="#0000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/messi"
        />

    <ImageButton
        android:id="@+id/flecha"
        android:layout_width="200px"
        android:layout_height="200px"
        android:backgroundTint="#0000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arrow" />


</GridLayout>